<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cody.coupletones.Settings"
    tools:showIn="@layout/activity_settings">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tones"
        android:id="@+id/tone_label"
        android:textSize="20sp"
        android:textColor="#9d4747"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On "
        android:checked="true"
        android:textSize="20sp"
        android:textColor="#9d4747"
        android:id="@+id/tone_switch"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibrate"
        android:layout_marginTop="8dp"
        android:id="@+id/vibrate_label"
        android:textSize="20sp"
        android:textColor="#9d4747"
        android:layout_below="@+id/tone_switch"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On "
        android:checked="true"
        android:textSize="20sp"
        android:textColor="#9d4747"
        android:id="@+id/vibrate_switch"
        android:layout_alignTop="@+id/vibrate_label"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
